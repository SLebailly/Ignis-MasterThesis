// A single AOV RGB image.
// Ignis only supports RGB
struct AOVImage {
    splat: fn (i32, Color) -> (),
    get:   fn (i32) -> Color,
}

// Contains all the aov images available
type AOVTable = fn (i32) -> AOVImage;

fn @make_empty_aov_image() = AOVImage {
    splat = @|_, _| -> () {},
    get   = @|_| -> Color { black },
};
