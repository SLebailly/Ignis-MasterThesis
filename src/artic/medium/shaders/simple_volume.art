/**
 * Allows for scaling the values of our uniform voxel grid
 */
fn @make_simple_volume_shader(scalar: f32) -> VolumeShader[SimpleVolumeVoxelValue] {
    
    VolumeShader[SimpleVolumeVoxelValue] {
        volume_properties = @|values: SimpleVolumeVoxelValue| make_volume_properties(color_mulf(values.sigma_s, scalar), color_mulf(values.sigma_a, scalar), color_mulf(values.emission, scalar))
    }
}
