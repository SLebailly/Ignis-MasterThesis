// This samples the environment by a given two-dimensional cdf
fn @make_environment_light_textured(max_radius: f32, tex: Texture, env_cdf: cdf::CDF2D, theta_off: f32, phi_off: f32) -> Light {
    let map = @|dir : Vec3| -> Vec2 {
        let (theta, phi) = spherical_from_dir(dir);
        let v = (theta + theta_off) / flt_pi;
        let u = (phi + phi_off) / (2 * flt_pi);
        make_vec2(u,v)
    };
    let unmap = @|uv : Vec2| -> Vec3 {
        let border = make_repeat_border();
        let theta  = border.vert(uv.y - theta_off / flt_pi) * flt_pi;
        let phi    = border.horz(uv.x - phi_off / (2 * flt_pi)) * 2 * flt_pi;
        dir_from_spherical(theta, phi)
    };
    let eval = @|dir : Vec3| tex(map(dir));

    Light {
        sample_direct = @ |rnd, _| {
            let u = randf(rnd);
            let v = randf(rnd);
            let sample    = cdf::sample_cdf_2d(make_vec2(u, v), env_cdf);
            let sinTheta  = math_builtins::sin(sample.pos.y*flt_pi);
            let dir       = unmap(sample.pos);
            let intensity = eval(dir);
            make_direct_sample(dir, intensity, 1.0, sample.pdf / (sinTheta * flt_pi * flt_pi * 2), 1.0)
        },
        sample_emission = @ |rnd| {
            let u = randf(rnd);
            let v = randf(rnd);
            let sample    = cdf::sample_cdf_2d(make_vec2(u, v), env_cdf);
            let sinTheta  = math_builtins::sin(sample.pos.y*flt_pi);
            let dir       = unmap(sample.pos);
            let intensity = eval(dir);
            make_emission_sample(vec3_mulf(dir, max_radius), dir, intensity, 1.0, sample.pdf / (sinTheta * flt_pi * flt_pi * 2), 1.0)
        },
        emission = @ |dir, _| {
            let uv        = map(dir);
            let pdf       = cdf::pdf_cdf_2d(uv, env_cdf);
            let sinTheta  = math_builtins::sin(uv.y*flt_pi);
            make_emission_value(eval(dir), 1.0, pdf / (sinTheta * flt_pi * flt_pi * 2))
        },
        delta    = false,
        infinite = true
    }
}

