fn @get_device(device_id: i32) -> Device {
    maybe_unused(device_id);

#if DEVICE_AVX
    make_avx_device()
#elif DEVICE_AVX2
    make_avx2_device()
#elif DEVICE_AVX512
    make_avx512_device()
#elif DEVICE_SSE42
    make_sse42_device()
#elif DEVICE_ASIMD
    make_asimd_device()
#elif DEVICE_NVVM
    make_nvvm_device(device_id)
#elif DEVICE_AMDGPU
    make_amdgpu_device(device_id)
#else
    make_cpu_default_device()
#endif
}